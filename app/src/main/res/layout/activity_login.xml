<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diningmanialogo"
    tools:context=".Login">


    <EditText
        android:id="@+id/login_tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/login_b_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_tv_user_email" />

    <EditText
        android:id="@+id/login_tv_user_email"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="389dp"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:hint="email@u.nus.edu"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/login_tv_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/login_b_login"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="211dp"
        android:layout_height="45dp"
        android:layout_marginBottom="169dp"
        android:background="@drawable/rounded_button"

        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_tv_password" />

    <ProgressBar
        android:id="@+id/login_b_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginBottom="32dp"
        android:indeterminateDrawable="@drawable/progress"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/login_tv_password"
        app:layout_constraintStart_toStartOf="parent" />

    <!--TODO:Design the whole login page-->
    <!--Reminder: Do not change the number of widgets and their ids-->

</android.support.constraint.ConstraintLayout>