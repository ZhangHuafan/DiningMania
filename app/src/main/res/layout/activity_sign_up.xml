<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF914C"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/diningmanialogo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/signUp_tv_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:ems="10"
            android:hint="eXXXXXXX@u.nus.edu"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/signUp_tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:ems="10"
            android:hint="Matriculation Number"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/signUp_b_sign_up"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="211dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:background="@drawable/rounded_button"
            android:text="Sign Up" />

    </LinearLayout>


</RelativeLayout>